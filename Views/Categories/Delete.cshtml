@model contactPro2.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<main class="container">
    <div class="row">
        <div class="col-md-5">

            <h3>Delete this category?</h3>
            <h3> This cannot be undone.</h3>
            <dl class="col" stlye="nowrap">
                <dt>
                    @Html.DisplayNameFor(model => model.Name):
                </dt>
                <dt class="text-lg-start text-danger">
                   
                    @Html.DisplayFor(model => model.Name)

                </dt>
                <dt hidden class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AppUser)
                </dt>
                <dd hidden class="col-sm-10">
                    @Html.DisplayFor(model => model.AppUser.Id)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
